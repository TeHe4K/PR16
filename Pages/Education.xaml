<Page x:Class="PR16.Pages.Education"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PR16.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Education">

    <Grid Background="#F8F9FA">


        <Grid Background="White" Height="60" VerticalAlignment="Top" Grid.Row="0">
            <Image HorizontalAlignment="Left"
                   Height="40"
                   Margin="10,10,0,0" 
                   VerticalAlignment="Top"
                   Width="40"
                   Source="C:\Users\student-a502.PERMAVIAT\source\repos\TeHe4K\PR16\ICO\Логотип_Пермский_авиационный_техникум.png"/>
            <Label Content="Электронная приемная компания"
                   HorizontalAlignment="Left" 
                   Margin="55,1,0,0" 
                   VerticalAlignment="Top" 
                   FontWeight="Bold"
                   FontSize="19"/>
            <Label Content="Пермского авиационного техникума им. А. Д. Швецова" 
                   HorizontalAlignment="Left"
                   Margin="55,24,0,0" 
                   VerticalAlignment="Top"/>
        </Grid>

        <Grid Margin="0,60,0,0">
            <ScrollViewer>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Сведение об организации"
                   Grid.Column="0"
                   HorizontalAlignment="Left"
                   Margin="10,10,0,0"
                   VerticalAlignment="Top"
                   FontWeight="Bold"/>
                    <Label Content="База:"
                   Grid.Column="0"
                   HorizontalAlignment="Left"
                   Margin="10,41,0,0"
                   VerticalAlignment="Top"/>

                    <Label Content="Выберите один из вариантов"
                   HorizontalAlignment="Left"
                   Grid.Column="0"
                   Margin="20,67,0,0"
                   VerticalAlignment="Top"
                   Background="{x:Null}"
                   FontSize="10"
                   Foreground="Red"/>
                    <RadioButton Content="9 классов"
                         HorizontalAlignment="Left"
                         Grid.Column="0"
                         Margin="22, 91, 0, 0"
                         VerticalAlignment="Top"
                         GroupName="FormStud"
                         Click="FormStud" />
                    <RadioButton Content="11 классов"
                         HorizontalAlignment="Left"
                         Margin="22, 106, 0, 0"
                         VerticalAlignment="Top"
                         GroupName="FormStud"
                         Click="FormStud" />
                    <RadioButton Content="СПО"
                         HorizontalAlignment="Left"
                         Grid.Column="0"
                         Margin="22, 121, 0, 0"
                         VerticalAlignment="Top"
                         GroupName="FormStud"
                         Click="FormStud"/>
                    <RadioButton Content="ВПО"
                         Grid.Column="0"
                         HorizontalAlignment="Left"
                         Margin="22, 136, 0, 0"
                         VerticalAlignment="Top"
                         GroupName="FormStud" 
                         Click="FormStud"/>

                    <Label Content="Выберите один из вариантов:"
                   Grid.Column="0"
                   HorizontalAlignment="Left"
                   Margin="20,148,0,0" 
                   VerticalAlignment="Top" 
                   Background="{x:Null}"
                   FontSize="10" 
                   Foreground="Red" 
                   Height="22"/>
                    <RadioButton Content="Аттестат" 
                         Grid.Column="0"
                         HorizontalAlignment="Left"
                         Margin="22, 166, 0, 0" 
                         VerticalAlignment="Top"
                         GroupName="TipStud" 
                         x:Name="Dogovor"/>
                    <RadioButton Content="Диплом"
                         Grid.Column="0"
                         HorizontalAlignment="Left" 
                         Margin="22, 181, 0, 0" 
                         VerticalAlignment="Top" 
                         GroupName="TipStud"
                         x:Name="Budget"/>

                    <Label Content="Серия и номер документа об образовании:"
                   Grid.Column="0"
                   HorizontalAlignment="Left"
                   Margin="10,203,0,0"
                   VerticalAlignment="Top"/>
                    <TextBox Height="24"
                     Grid.Column="0"
                     Margin="12,229,10,0" 
                     TextWrapping="Wrap" 
                     Text="" 
                     VerticalAlignment="Top"/>
                    <Label Content="Прикрепите сканы страниц документа об образовании с Ф.И.О., наименование образовательной организации и оценками" 
                   HorizontalAlignment="Left" 
                   Margin="10,254,0,0"
                   Grid.ColumnSpan="2"
                   VerticalAlignment="Top"/>
                    <TextBox Height="24" 
                     Margin="12,316,90,0" 
                     TextWrapping="Wrap" 
                     Text="" 
                     Grid.ColumnSpan="2"
                     x:Name="file"
                     VerticalAlignment="Top"/>
                    <Grid Grid.Column="1" HorizontalAlignment="Right" Width="391" Height="400" VerticalAlignment="Bottom">
                        <Button Content="Продолжить"
                    HorizontalAlignment="Right" 
                    Margin="0,0,10,10"
                    Width="150"
                    Click="Next" 
                    Grid.Column="1"
                    Height="25" 
                    VerticalAlignment="Bottom"/>
                    </Grid>
                    <TextBox Height="24"
                     Margin="10,229,10,0"
                     TextWrapping="Wrap" 
                     Text=""
                     Grid.Column="1"
                     VerticalAlignment="Top"/>
                    <Label Content="Средний балл (до сотых):"
                   Grid.Column="1"
                   HorizontalAlignment="Left"
                   Margin="10,203,0,0"
                   VerticalAlignment="Top"/>
                    <Button Content="Выбрать" 
                    HorizontalAlignment="Right" 
                    Margin="0,315,10,0"
                    VerticalAlignment="Top"
                    Width="75"
                    Height="25" 
                    Click="File" Grid.Column="1"/>
                    <Label Content="Формат документов должен быть PNG,JPEG или PDF, а максимальный размер каждого файла 5 МБ"
                   FontSize="10" 
                   Grid.ColumnSpan="2"
                   Foreground="Red" 
                   HorizontalAlignment="Left" 
                   Margin="12,285,0,0"
                   VerticalAlignment="Top"/>
                </Grid>
            </ScrollViewer>
        </Grid>

    </Grid>
</Page>
